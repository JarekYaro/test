                            <?php if ($teaser->accentColor) { ?> background-color: #<?= $teaser->accentColor; ?> ; <?php } ?>">
                                <?php if ($teaser->linkLabel) { ?>
                                    <?= $teaser->linkLabel; ?>
                                <?php } else { ?>
                                    More Info
                                <?php } ?>
                            </a>
